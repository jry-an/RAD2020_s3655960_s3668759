<h1 class="title is-2">Topics</h1>

<%# if has_role?(:admin) %>
<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'New Topic', new_topic_path, class:'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.topic, topic %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'View Topic', topic, class:'button' %>
          <%= link_to 'Edit', edit_topic_path(topic), class:'button' %>
          <%= link_to 'Delete', topic, class:'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this topic? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<%# else %>
 <%# <p class="has-text-center">Sorry! You don't have access this page.</p> %>
<%# end %>