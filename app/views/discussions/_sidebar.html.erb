<!-- Bulma being used below -->

<div class="column is-4 is-offset-1">

  <h3 class="title is-5 has-text-grey-light">Recent Members</h3>
    <table>
      <tr>
        <% Array(User.all.order('last_seen_at desc')[0..3]).each do |d| %>
          <td>
            <%= link_to gravatar_image_tag(d.email, class:'border-radius-50', size: 5), d %>
          </td>
        <% end %>
      </tr>
      <tr>
        <% Array(User.all.order('last_seen_at desc')[0..3]).each do |d| %>
          <td class="has-text-centered">
            <%= link_to d.username, d %>
          </td>
        <% end %>
      </tr>

      <tr>
        <% Array(User.all.order('last_seen_at desc')[4..7]).each do |d| %>
          <td>
            <%= link_to gravatar_image_tag(d.email, class:'border-radius-50', size: 5), d %>
          </td>
        <% end %>
      </tr>
      <tr>
        <% Array(User.all.order('last_seen_at desc')[4..7]).each do |d| %>
          <td class="has-text-centered">
            <%= link_to d.username, d %>
          </td>
        <% end %>
      </tr>

      <tr>
        <% Array(User.all.order('last_seen_at desc')[8..11]).each do |d| %>
          <td>
            <%= link_to gravatar_image_tag(d.email, class:'border-radius-50', size: 5), d %>
          </td>
        <% end %>
      </tr>
      <tr>
        <% Array(User.all.order('last_seen_at desc')[8..11]).each do |d| %>
          <td class="has-text-centered">
            <%= link_to d.username, d %>
          </td>
        <% end %>
      </tr>
    </table>

  <br/>
  <br/>

  <%= link_to 'Topics', topics_path, class: 'title is-5 has-text-grey-light' %>
  <br>
  <br>
  <div class="buttons">
    <% @topics.each do |t| %>
      <!-- Link too will no longer be the correct use as they are just toggle button -->
      <%# link_to t.topic, t, class: 'button is-rounded', :type => 'button', :'data-toggle' => 'button', :'aria-pressed' => 'false' #%>

      <label class="button is-info is-rounded">
        <input type="checkbox"> <%= t.topic %>
      </label>
    <% end %>
  </div>

  <%= link_to 'New Topic', new_topic_path, class: 'button is-info' %>

  <br/>
  <br/>

  <h3 class="title is-5 has-text-grey-light">Top Posts</h3>
  <table class="table is-fullwidth is-striped">
    <tbody>
      <% @discussions.sort_by{|d| d[:view_count]}.reverse[0..4].each do |d| %>
      <tr>
        <td> <%= link_to d.title, d %> </td>
        <td style="width:15%"> <%= d.view_count %> <i class="far fa-eye"></i></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br/>
  <br/>

  <h3 class="title is-5 has-text-grey-light">Links</h3>
  <div class="buttons">
    <%= link_to "Google", "http://www.google.com", class: 'button is-rounded' %>
    <%= link_to "RMIT", "https://www.rmit.edu.au/", class: 'button is-rounded' %>
    <%= link_to "Ruby on Rails", "https://rubyonrails.org/", class: 'button is-rounded' %>
  </div>
</div>



